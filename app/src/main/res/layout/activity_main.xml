<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity">

    <View
        android:id="@+id/pview_workorder"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="100dp"
        android:background="@color/bg_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_workorder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/shortcut_workorder"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pview_workorder"
        app:layout_constraintEnd_toEndOf="@+id/pview_workorder"
        app:layout_constraintStart_toEndOf="@+id/iconview_wo"
        app:layout_constraintTop_toTopOf="@+id/pview_workorder" />

    <View
        android:id="@+id/iconview_wo"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#25aae1"
        app:layout_constraintBottom_toBottomOf="@+id/pview_workorder"
        app:layout_constraintStart_toStartOf="@+id/pview_workorder"
        app:layout_constraintTop_toTopOf="@+id/pview_workorder" />

    <View
        android:id="@+id/pview_asset"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:background="@color/bg_grey"
        app:layout_constraintEnd_toEndOf="@+id/pview_workorder"
        app:layout_constraintStart_toStartOf="@+id/pview_workorder"
        app:layout_constraintTop_toBottomOf="@+id/pview_workorder" />

    <View
        android:id="@+id/view4"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="#25aae1"
        app:layout_constraintBottom_toBottomOf="@+id/pview_asset"
        app:layout_constraintStart_toStartOf="@+id/pview_asset"
        app:layout_constraintTop_toTopOf="@+id/pview_asset" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Settings"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/pview_asset"
        app:layout_constraintEnd_toEndOf="@+id/pview_asset"
        app:layout_constraintStart_toEndOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/pview_asset" />

    <ImageView
        android:id="@+id/img_wo"
        android:layout_width="30dp"
        android:contentDescription="@string/app_name"
        android:layout_height="30dp"
        android:src="@drawable/archive"
        app:layout_constraintBottom_toBottomOf="@+id/iconview_wo"
        app:layout_constraintEnd_toEndOf="@+id/iconview_wo"
        app:layout_constraintStart_toStartOf="@+id/pview_workorder"
        app:layout_constraintTop_toTopOf="@+id/iconview_wo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/gear"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/pview_asset"
        app:layout_constraintTop_toTopOf="@+id/view4" />
</androidx.constraintlayout.widget.ConstraintLayout>